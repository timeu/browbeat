{
    "template": "browbeat-perfkit-*",
    "settings": {
        "index.mapping.total_fields.limit": 5000,
        "number_of_shards": 1,
        "number_of_replicas": 0
    },
    "mappings": {
        "result": {
            "properties": {
                "browbeat_rerun": {
                    "type": "long"
                },
                "browbeat_scenario": {
                    "properties": {
                        "benchmarks": {
                            "index": "true",
                            "type": "keyword"
                        }
                    }
                },
                "browbeat_uuid": {
                    "index": "true",
                    "type": "keyword"
                },
                "cloud_name": {
                    "index": "true",
                    "type": "keyword"
                },
                "grafana_url": {
                    "properties": {
                        "openstack-general-system-performance": {
                            "index": "true",
                            "type": "keyword"
                        }
                    }
                },
                "perfkit_setup": {
                    "properties": {
                        "cloud": {
                            "index": "true",
                            "type": "keyword"
                        },
                        "image": {
                            "index": "true",
                            "type": "keyword"
                        },
                        "machine_instance": {
                            "index": "true",
                            "type": "keyword"
                        },
                        "machine_type": {
                            "index": "true",
                            "type": "keyword"
                        },
                        "perfkitbenchmarker_version": {
                            "index": "true",
                            "type": "keyword"
                        },
                        "vm_count": {
                            "index": true,
                            "type": "text"
                        },
                        "zone": {
                            "index": "true",
                            "type": "keyword"
                        }
                    }
                },
                "timestamp": {
                    "type": "date",
                    "format": "strict_date_optional_time||epoch_millis"
                }
            }
        }
    }
}
